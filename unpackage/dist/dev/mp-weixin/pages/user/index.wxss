.content-wrap {
  height: 100vh;
  background-color: #F7F7FA;
}
.content-wrap .top-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 130rpx 20rpx 130rpx 40rpx;
  background-color: #0091FF;
}
.content-wrap .top-content .pic-wrap {
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.7);
  text-align: center;
}
.content-wrap .top-content .pic-wrap image {
  width: 100%;
  height: 100%;
}
.content-wrap .top-content .text-content {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
  margin-left: 30rpx;
  color: #FFFFFF;
  padding-top: 22rpx;
}
.content-wrap .top-content .text-content ._p {
  font-size: 34rpx;
  font-weight: 500;
  line-height: 56rpx;
}
.content-wrap .info-content .custom-list-item {
  margin-bottom: 25rpx;
}
.content-wrap .info-content .custom-list-item .icon-wrap {
  width: 48rpx;
  height: 48rpx;
  text-align: center;
  margin-right: 20rpx;
}
.content-wrap .info-content .custom-list-item .icon-wrap image {
  width: 100%;
  height: 100%;
}
.content-wrap .info-content .text {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #000000;
  line-height: 1.6em;
}

